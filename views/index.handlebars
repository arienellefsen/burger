<div class="container">
    <h1>Eat-That-Burger</h1>
    <div class="row">
        <div class="col-sm-8 col-md-12"
        
            <h3>Create a burger</h3>
            <form class="form-inline" action="/" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="submit-burger" name="name" placeholder="Name">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>

        <div class="col-sm-4 col-md-6">
            <h2>Burgers to eat:</h2>
            <ul class="center-block">
                {{#each burgers}}
                <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit">Devour!</button>
                    </form>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-4 col-md-6">
            <h2> Burgers deleted:</h2>
        </div>
     </div>
 </div>